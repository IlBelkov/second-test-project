.hero
  height 812px
  background lightGray url('../images/bg.png') 15% center no-repeat
  position relative
  
  &__label
    position absolute
    top 50%
    left 50%
    transform translate(-50%,-50%)

  &__button
    width 342px
    height 59px
    border 2px solid #737373
    color #454647
    font-family Montserrat-Regular
    font-size 16px
    font-weight 400
    text-transform uppercase
    letter-spacing 3.2px
    display flex 
    justify-content center
    align-items center
    position absolute
    bottom 122px
    right 323px

.catalog
  margin-top 64px
  .container-main
    border-top 1px solid alpha(darkGray,0.2)
    padding-top 54px

  &__tabs
    margin-bottom 61px

.tabs
  max-width 700px
  display flex 
  justify-content space-between
  flex-wrap wrap

  &__link
    color grayText
    font-family Montserrat-Regular
    font-size 13px
    font-weight 400
    line-height 20px
    text-transform uppercase

    &:hover
      color blueColor
      cursor pointer

.product
  display flex
  // flex-wrap wrap
  justify-content space-between

  &__right-block, &__left-block
    display flex
    flex-wrap wrap
    justify-content space-between

  &__left-block
    margin-right 30px
  
  &__card
    width 420px
    height 500px
    background darkGray
    position relative

    &:nth-child(3)
      width 870px
      height 704px
      margin-top 30px

  &__price
    position absolute
    top 15px
    left 15px
    display flex
  
  &__sale
    margin-right 12px
    text-decoration line-through

  &__hidden-inform
    position absolute
    bottom -150px
    left 0
    min-height 150px
    display flex 
    flex-direction column
    align-items center
    background-color whiteColor
    text-align center
    width 100%

  &__title-inform
    color grayText
    font-family Montserrat-Regular
    font-size 13px
    font-weight 400
    line-height 20px
    text-transform uppercase
    margin-top 21px

  &__text-inform   
    color #8e8c8c
    font-family Roboto-Regular
    font-size 15px
    font-weight 400
    margin-top 19px

  &__buttons-inform
    display flex
    justify-content center
    align-items center
    margin-top 17px

  &__button
    width 30px
    height 30px
    border-radius 50%
    background grayText
    position relative
    
    &:not(:last-child)
      margin-right 14px

    &:hover
      background blueColor
      cursor pointer

    &:nth-child(1)
      &:after
        position absolute
        content ''
        width 18px
        height 15px
        top 50%
        left 50%
        transform translate(-50%,-50%)
        background url('../images/minibag.png') no-repeat
    &:nth-child(2)
      &:after
        position absolute
        content ''
        width 18px
        height 16px
        top 50%
        left 50%
        transform translate(-50%,-50%)
        background url('../images/heart.png') no-repeat
    &:nth-child(3)
      &:after
        position absolute
        content ''
        width 15px
        height 16px
        top 50%
        left 50%
        transform translate(-50%,-50%)
        background url('../images/arrows.png') no-repeat


.card-right
  &:nth-child(3) 
    order 1 
    margin-top 0px
    margin-bottom 30px    
  &:nth-child(2) 
    order 2   
  &:nth-child(1) 
    order 3   

