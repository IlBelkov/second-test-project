.header
  display flex 
  flex-direction column

.user-options
  background-color darkGray
  min-height 45px

  .container
    display flex 
    justify-content space-between
    align-items center

  &__currency
    color #777777
    font-family Montserrat-Regular
    font-size 13px
    font-weight 400
    line-height 21px

  &__buttons
    display flex  
    color #999999
    font-family Montserrat-Regular
    font-size 13px
    font-weight 400
    line-height 20px
    display flex
    align-items center
  
  &__bag 
    width 147px
    height 46px
    background-color blueColor 
    color whiteColor
    font-family Montserrat-Regular
    font-size 13px
    font-weight 400
    line-height 21px
    display flex
    align-items center
    position relative
    justify-content flex-end
    padding-right 24px
    margin-left 82px

    &:before
      content ''
      position absolute
      width 20px
      height 17px 
      top 50%
      transform translateY(-50%)
      left 22px
      background url('../images/bag.png') center no-repeat

  &__autorization
    margin-left 36px

.menu-row
  background lightGray
  
  .container-main
    display flex
    justify-content space-between
    align-items center
    height 108px

  &__input-element
    padding-left 11px
    max-width 100%
    height 30px
    border 1px solid #e7e7e7
    background-color lightGray
    color #989898
    font-family Montserrat-Light
    font-size 13px
    font-weight 300
    line-height 27px

  &__search-form
    max-width 190px
    position relative

    &:after
      content ''
      position absolute
      background url('../images/search.png') center no-repeat
      width 13px
      height 15px
      top 50%
      transform translateY(-50%)
      right 11px

  &__right-items
    display flex
    align-items center

.nav
  width 595px
  display flex
  justify-content space-between
  margin-right 115px

  &__item
    color #222222
    font-family Montserrat-Regular
    font-size 13px
    font-weight 400
    line-height 20px
    text-transform uppercase
    position relative

